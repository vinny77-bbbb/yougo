page {
  background-color: #edece8;
}
.user_info_warp {
  height: 45vh;
  background-color: var(--themColor);
  overflow: hidden;
  position: relative;
}
.user_info_warp .user_img_wrap {
  position: relative;
}
.user_info_warp .user_img_wrap .user_bg {
  height: 50vh;
  filter: blur(5px);
}
.user_info_warp .user_img_wrap .user_info {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  top: 20%;
  text-align: center;
}
.user_info_warp .user_img_wrap .user_info .user_icon {
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
}
.user_info_warp .user_img_wrap .user_info .user_name {
  margin-top: 40rpx;
  color: #fff;
}
.user_info_warp .user_btn {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  top: 40%;
  border: 1rpx solid #fff;
  color: #fff;
  padding: 30rpx;
  font-size: 38rpx;
  border-radius: 10rpx;
}
.user_content {
  position: relative;
}
.user_content .user_main {
  color: #666;
  padding-bottom: 100rpx;
  position: absolute;
  width: 90%;
  left: 50%;
  transform: translateX(-50%);
  top: -40rpx;
}
.user_content .user_main .history_wrap {
  background-color: #fff;
  display: flex;
}
.user_content .user_main .history_wrap navigator {
  flex: 1;
  text-align: center;
  padding: 10rpx 0;
}
.user_content .user_main .history_wrap navigator .his_num {
  color: var(--themColor);
}
.orders_wrap {
  background-color: #fff;
  margin-top: 30rpx;
}
.orders_wrap .orders_title {
  padding: 20rpx;
  border-bottom: 1px solid #ccc;
}
.orders_wrap .orders_content {
  display: flex;
}
.orders_wrap .orders_content navigator {
  padding: 20rpx 0;
  flex: 1;
  text-align: center;
}
.orders_wrap .orders_content navigator .iconfont {
  font-size: 40rpx;
}
.orders_wrap .orders_content navigator .orders_name {
  color: var(--themColor);
}
.address_wrap {
  margin-top: 30rpx;
  background-color: #fff;
  padding: 20rpx;
}
.app_info_wrap {
  margin-top: 30rpx;
  background-color: #fff;
}
.app_info_wrap .app_info_item {
  padding: 20rpx;
  border-bottom: 1rpx solid #ccc;
}
.app_info_wrap .app_info_contact {
  display: flex;
  justify-content: space-between;
}
.recommend_wrap {
  margin-top: 30rpx;
  background-color: #fff;
  padding: 20rpx;
}
